{
  "version": 2,
  "builds": [
    {
      "src": "**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/verify-code.js": {
      "maxDuration": 10
    },
    "api/admin/codes.js": {
      "maxDuration": 10
    }
  }
}